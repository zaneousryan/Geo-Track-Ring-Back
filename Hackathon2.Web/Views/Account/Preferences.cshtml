@model Hackathon2.Web.Models.PreferencesModel
@using Hackathon2.Web.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Preferences";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <p class="text-success">@ViewBag.StatusMessage</p>
    @using (Html.BeginForm("Preferences", "Account", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-12">

                <ul class="nav nav-tabs" role="tablist">
                    <li class="active"><a href="#comfort" role="tab" data-toggle="tab">Comfort</a></li>
                    <li><a href="#music" role="tab" data-toggle="tab">Music</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="comfort">




                        <div class="form-group">
                            @Html.LabelFor(m => m.Temperature)


                            @Html.TextBoxFor(m => m.Temperature, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Temperature, "", new { @class = "text-danger" })


                        </div>
                    </div>

                    <div class="tab-pane" id="music">

                        <div class="form-group">
                            @Html.LabelFor(m => m.MusicVolume)

                            @Html.TextBoxFor(m => m.MusicVolume, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MusicVolume, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.MusicGenre)

                            @Html.TextBoxFor(m => m.MusicGenre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MusicGenre, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.FavouriteSpotifyList)
                           
                                @Html.TextBoxFor(m => m.FavouriteSpotifyList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FavouriteSpotifyList, "", new { @class = "text-danger" })
                          
                        </div>

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

            </div>
        </div>
    }
</div>