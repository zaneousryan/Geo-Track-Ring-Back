@model Hackathon2.Web.Models.OutingModel
@using Hackathon2.Models
@{
    ViewBag.Title = "Trip Planner";
}
<h2>@ViewBag.Title</h2>
<div class="container">

    @using (Html.BeginForm("Outing", "Account", FormMethod.Post))
    {
        <div class="row" id="puppy">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.OutingId)
                <div class="form-group">
                    <div class="ui-widget">
                        <label for="location">Select your locations: </label>
                        <input id="location" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="ui-widget" style="margin-top:2em; font-family:Arial">
                        My Trip:
                        <div id="log" style="height: 200px; overflow: auto;" class="ui-widget-content form-control"></div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Start the Trip!" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/views/outing")
}